{
  "name": "@obsidian-google-drive-sync/obsidian-plugin",
  "version": "0.1.0",
  "private": true,
  "description": "A plugin of Obsidian syncing data between PC and mobile devices.",
  "scripts": {
    "dev": "tsx build.ts --watch",
    "build-only": "NODE_ENV=production tsx build.ts",
    "build": "pnpm run typecheck && pnpm run build-only",
    "version": "tsx ./scripts/bump-manifest-version.ts && git add manifest.json versions.json",
    "typecheck": "tsgo",
    "check": "biome check",
    "check:ci": "biome ci",
    "fix": "biome check --fix"
  },
  "keywords": [
    "obsidian",
    "google-drive"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "esbuild": "^0.27.0",
    "obsidian": "latest",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "catalog:"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
