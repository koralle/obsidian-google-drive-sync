{
  "name": "@koralle/obsidian-google-drive-sync",
  "version": "1.0.0",
  "description": "A plugin of Obsidian syncing data between PC and mobile devices.",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "dev": "tsx build.ts --watch",
    "build-only": "NODE_ENV=production tsx build.ts",
    "build": "pnpm run typecheck && pnpm run build-only",
    "version": "tsx ./scripts/bump-manifest-version.ts && git add manifest.json versions.json",
