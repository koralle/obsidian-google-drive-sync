    "check": "biome check",
    "check:ci": "biome ci",
    "fix": "biome check --fix"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251121.1",
    "esbuild": "^0.27.0",
    "obsidian": "latest",
    "pnpm": "10.23.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
